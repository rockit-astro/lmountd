{
  "daemon": "portable_telescope",
  "log_name": "lmountd@portable",
  "control_machines": ["PortableTCS"],
  "pwi_host": "localhost",
  "pwi_port": 8220,
  "pwi_timeout": 0.5,
  "slew_poll_interval": 0.5,
  "slew_timeout": 60,
  "home_poll_interval": 1,
  "home_timeout": 60,
  "ha_soft_limits": [-90, 90],
  "dec_soft_limits": [-45, 90],
  "park_positions": {
    "stow": {
      "desc": "general purpose park position",
      "alt": 50,
      "az": 0
    },
    "zenith": {
      "desc": "zenith",
      "alt": 90,
      "az": 0
    }
  }
}
